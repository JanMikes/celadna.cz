            {{ dokumenty.Obsah|markdown_to_html|nl2br }}
        {% endif %}
    </section>

    <section class="official-board" role="region" aria-label="Úřední deska">
        {{ include('_uredni_deska.html.twig', {
            'uredni_deska': dokumenty.Uredni_deska,
            'show_categories': false,
            'years': dokumenty.Uredni_deska_roky,
            'years_filter_name': 'rok',
            'iframe': false,
            'display_publish_date': display_publish_date|default(true)
        }) }}
    </section>
</section>
